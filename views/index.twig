{% extends 'layout.twig' %}

{% block body %}
	{#<h1>{{title}}</h1><p>Welcome to{{title}}</p>#}

	<div class="container-sm">
		<div class="container-wrapper">

			<div class="row demo-options px-3 py-4 mx-0">
				<div
					class="col-sm-6">

					<!-- Region selector -->
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle drop-down-selector" type="button" id="dropdown-region" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static">
							Customer location
						</button>
						<ul class="dropdown-menu w-100 mw-100" aria-labelledby="dropdown-region">
							{% for key, region in regions %}
								<li>
									<a class="dropdown-item" name="region-selector" href="#" data-value="{{ key }}">{{ region.name }}</a>
								</li>
							{% endfor %}
							<li class="clearfix"></li>
							<li>
								<hr class="dropdown-divider">
							</li>
							<li>
								<a class="dropdown-item disabled" aria-disabled="true">We support lots of currencies and countries worldwide disclaimer here...</a>
							</li>
						</ul>
					</div>

				</div>

				<div
					class="col-sm-6 mt-3 mt-sm-0">

					<!-- Aspect selector -->
					<div class="dropdown">
						<button class="btn btn-secondary dropdown-toggle drop-down-selector" type="button" id="dropdown-aspect" data-bs-toggle="dropdown" aria-expanded="false" data-bs-display="static">
							Appearance customisation
						</button>
						<ul class="dropdown-menu w-100" aria-labelledby="dropdown-aspect">
							{% for key, aspect in aspects %}
								<li>
									<a class="dropdown-item float-start w-75" name="aspect-selector" href="#" data-value="{{ key }}">{{ aspect.name }}</a>
									{% if key != 'default' %}
										<a class="dropdown-icon float-end text-end py-1 pe-3 w-25" href="#" data-action="aspect" data-aspect-key="{{ key }}">
											{% include "index/icon-copy.twig" %}
										</a>
									{% endif %}
								</li>
							{% endfor %}
							<li class="clearfix"></li>
							<li>
								<hr class="dropdown-divider">
							</li>
							<li>
								<a class="dropdown-item disabled" aria-disabled="true">Customization for Payment Components disclaimer here...</a>
							</li>
						</ul>
					</div>

				</div>
			</div>

			<div class="row demo-content">
				<div class="col">

					<div id="components-wrapper">
						<form
							id="payment-form">

							<!-- Failure Alert -->
							<div id="failure-alert" class="alert alert-danger d-none" role="alert"></div>

							<!-- Payment Components -->
							<div class="payments-container">
								<div id="payments"></div>
							</div>
						</form>
					</div>

				</div>
			</div>
		</div>
	</div>


	<!-- Wallets Disclaimer -->
	<div id="components-disclaimer" class="fixed-bottom text-secondary">Google Pay and Apple Pay disclaimer here...?</div>

	{% include 'index/modal-success.twig' %}

	{% include 'index/modal-aspect.twig' %}	

	<script src="/js/demo.js" type="module"></script>
	<script src="https://checkout-web-components.checkout.com/index.js"></script>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
{% endblock %}
